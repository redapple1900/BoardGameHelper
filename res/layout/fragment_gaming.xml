<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fragment_background">

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_game"
            android:layout_width="@dimen/small_image_size"
            android:layout_height="@dimen/small_image_size"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/help" />

        <TextView
            android:id="@+id/status_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:drawablePadding="3dp"
            android:textColor="#619883"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/status_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:drawablePadding="3dp"
            android:textColor="#619883"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/status_propose_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:drawablePadding="3dp"
            android:textColor="#619883"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/status_members_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:drawablePadding="3dp"
            android:textColor="#619883"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>